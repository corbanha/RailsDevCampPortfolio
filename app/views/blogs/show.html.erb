<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">
      <div class="blog-post">
        <h2 class="blog-post-title"><%= @blog.title %></h2>
        <p class="blog-post-meta"><%= @blog.created_at %> by Corban
        <em><%= link_to('Edit', edit_blog_path(@blog)) if logged_in?(:site_admin) %></em>
        </p>

        <%= @blog.body %>
        <hr/>
        <%= link_to 'Edit |', edit_blog_path(@blog) if logged_in?(:site_admin) %> <%= link_to 'All Blogs', blogs_path %>
      </div>

      <nav class="blog-pagination">
