<%= form_for(portfolio) do |form| %>

  <div class='row'>
    <div class='col-md-6'>
      <div class="field form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= form.label :subtitle %>
        <%= form.text_area :subtitle, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= form.label :thumbnail %>
        <%= form.text_area :thumbnail, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= form.label :main_image %>
        <%= form.text_area :main_image, class: 'form-control' %>
      </div>
    </div>

    <div class='col-md-6'>
      <div class="field form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: '15' %>
      </div>
    </div>
  </div>

  <hr/>

  <div class='row'>
    <div class='col-md-12'>
      <div class='form-group'>
        <%= form.label 'Technologies Used' %>
        <%= form.fields_for :technologies do |tech| %>
          <div>
            <%= tech.label :name %>
            <%= tech.text_field :name, class: 'form-control' %>
          </div>
        <% end %>
      </div>
      <div class="actions form-group">
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
