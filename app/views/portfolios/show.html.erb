<div class='container'>
  <div class='row'>
    <div class='col-sm-12 col-md-7'>
      <%= image_tag @portfolio.main_image, width: '100%' %>
    </div>

    <div class='col-sm-12 col-md-5'>
      <h1><%= @portfolio.title %></h1>

      <em><%= @portfolio.subtitle %></em>

      <p><%= @portfolio.body %></p>

      <%= link_to 'Edit', edit_portfolio_path(@portfolio) if logged_in?(:site_admin) %>
      <%= link_to 'Delete', @portfolio, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>

      <h2>Technologies Used</h2>

      <% @portfolio.technologies.each do |tech| %>
        <p><%= tech.name %></p>
      <% end %>

      <%= link_to 'View all portfolio items', portfolios_path %>
    </div>
  </div>
</div>
