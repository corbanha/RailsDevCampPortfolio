<div class='col-md-4'>
  <div class='card mb-4 shadow-sm'>
    <%= image_tag portfolio.thumbnail, class: 'card-img-top', width: '100%', height: '225', preserveAspectRatio: 'xMidYMid slice', focusable: 'false' %>
    <div class='card-body'>
      <p class='card-text'><%= portfolio.title %></p>
      <div class='d-flex justify-content-between align-items-center'>
        <div class='btn-group'>
          <%= button_to('View', portfolio_path(portfolio), method: :get, class: 'btn btn-sm btn-outline-secondary', type: 'button') %>
          <%= button_to('Edit', edit_portfolio_path(portfolio), method: :get, class: 'btn btn-sm btn-outline-secondary', type: 'button') if logged_in?(:site_admin) %>
        </div>
        <small class='text-muted'><%= portfolio.technologies&.first&.name %></small>
      </div>
    </div>
  </div>
</div>
