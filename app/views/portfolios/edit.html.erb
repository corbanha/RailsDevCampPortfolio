<h1>Edit your portfolio</h1>

<%= form_for(@portfolio) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_area :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :thumbnail %>
    <%= form.text_area :thumbnail %>
  </div>

  <div class="field">
    <%= form.label :main_image %>
    <%= form.text_area :main_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
